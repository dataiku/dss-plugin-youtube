{
    "meta" : {
        "label": "Comments threads",
        "description": "Retrieve comments for a video or a channel ",
        "icon": "icon-play"
    },
    "readable": true,
    "writable": false,
    "params": [
        {
            "name": "access_type",
            "label": "Access type",
            "type": "SELECT",
            "defaultValue": "token_access",
            "selectChoices": [
                {
                    "value": "token_access",
                    "label": "API Key"
                },
                {
                    "value": "oauth_credentials",
                    "label": "Google Single Sign On"
                }
            ]
        },
        {
            "name": "token_access",
            "label": "API key access",
            "type": "PRESET",
            "parameterSetId": "api-key",
            "visibilityCondition": "model.access_type == 'token_access'"
        },
        {
            "name": "oauth_credentials",
            "label": "Google Single Sign On",
            "type": "PRESET",
            "parameterSetId": "oauth-credentials",
            "visibilityCondition": "model.access_type == 'oauth_credentials'"
        },
        {
            "name": "part",
            "label": "Parts",
            "type": "MULTISELECT",
            "defaultValue": [],
            "selectChoices": [
                {
                    "value": "id",
                    "label": "ID"
                },
                {
                    "value": "snippet",
                    "label": "Snippet"
                },
                {
                    "value": "replies",
                    "label": "Replies"
                }
            ]
        },
        {
            "name": "channel_id",
            "label": "Channel ID",
            "type": "STRING",
            "description": "",
            "mandatory": false
        },
        {
            "name": "video_id",
            "label": "Videos ID",
            "type": "STRING",
            "description": "",
            "mandatory": false
        },
        {
            "name": "comment_id",
            "label": "Comment IDs",
            "type": "STRING",
            "description": "",
            "defaultValue": "",
            "mandatory": false
        },
        {
            "name": "allThreadsRelatedToChannelId",
            "label": "All threads related to Channel ID",
            "type": "STRING",
            "description": "",
            "defaultValue": "",
            "mandatory": false
        }
    ]
}
